<!-- PingView.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .west {
            width: 13em;
            margin: 1em;
            margin-bottom: 0em;
        }
    </ui:style>
    <g:DockLayoutPanel unit='EM'>
        <g:north size='10'>
            <g:FlowPanel>
                <g:Label>Title</g:Label>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:FlowPanel ui:field="contentPanel">
                <g:Label>Choose action</g:Label>
            </g:FlowPanel>
        </g:center>
        <g:west size='15'>
            <g:FlowPanel>
                <g:FlowPanel>
                    <g:Button ui:field="statusButton" styleName="{style.west}">Status</g:Button>
                </g:FlowPanel>
                <g:FlowPanel>
                    <g:Button ui:field="videoButton" styleName="{style.west}">Video</g:Button>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:west>
        <g:south size='3'>
            <g:FlowPanel>
                <g:Label>(C)(T)(R)</g:Label>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>