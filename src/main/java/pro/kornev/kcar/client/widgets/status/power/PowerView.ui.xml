<!-- PingView.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>


    <g:HTMLPanel styleName="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">Power</div>
            <div class="panel-body">
                <form class="form-horizonta">
                    <div class="form-group">
                        <label  class="col-md-4 control-label">Volts</label>
                        <div class="col-md-8 input-group">
                            <g:TextBox ui:field="voltsHolder" styleName="form-control"/>
                            <span class="input-group-addon">V</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label  class="col-md-4 control-label">Amperes</label>
                        <div class="col-md-8 input-group">
                            <g:TextBox ui:field="amperesHolder" styleName="form-control"/>
                            <span class="input-group-addon">A</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <g:Button ui:field="pingButton" styleName="btn btn-default">
                                <span class="glyphicon glyphicon-repeat" />
                            </g:Button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>